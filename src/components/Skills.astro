---
import { skills } from '@cv'
---

<hr class='my-8 border-neutral-900' />
<section>
  <h2>Skills</h2>
  <ul class='flex gap-2 flex-wrap'>
    {
      skills.map(skill => (
        <li class='bg-neutral-900 px-2 py-1 rounded'>
          <div>
            <p>{skill.name}</p>
          </div>
        </li>
      ))
    }
  </ul>
</section>
